@model LoginViewModel
@{
    Layout = "_AccountLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-8">
            <div class="login-container">
                <div class="card">
                    <div class="card-header">
                        Login
                    </div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group text-center">
                                <label for="username">Username</label>
                                <input type="text" class="form-control text-center" asp-for="Username" placeholder="Enter username">
                            </div>
                            <div class="form-group text-center">
                                <label for="password">Password</label>
                                <input type="password" class="form-control text-center" asp-for="Password" placeholder="Enter password">
                            </div>
                            <button type="submit" class="btn btn-block btn-login">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
